{% set id = id is defined ? id : false %}
{% set back = back is defined ? back : false %}
{% set edit = edit is defined ? edit : false %}
{% set delete = delete is defined ? delete : false %}
{% set show = show is defined ? show : false %}
{% set create = create is defined ? create : false %}

{% if show %}
    <a href="{{ path(show, {'id': id}) }}" class="btn btn-outline-primary btn-sm mb-2">
        {{ 'show'|trans|capitalize }}
    </a>
{% endif %}

{% if edit %}
    <a href="{{ path(edit, {'id': id}) }}" class="btn btn-sm btn-outline-primary mb-2">
        {{ 'edit'|trans|capitalize }}
    </a>
{% endif %}

{% if create %}
    <a href="{{ create }}" class="btn btn-outline-primary btn-sm mb-2">
        {{ 'add'|trans|capitalize ~ ' ' ~ 'new'|trans }}
    </a>
{% endif %}

{% if back %}
    <input class="btn btn-sm btn-outline-primary mb-2" type="button" value="{{ 'back'|trans|capitalize }}" onclick="history.back(-1)" />
{% endif %}

{% if delete %}
    {% include 'components/_delete_form.html.twig' with {'path': delete, 'id': id} %}
{% endif %}
