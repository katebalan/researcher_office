{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <h3 class="pb-3 mb-4 font-weight-bold border-bottom">
                {{ 'discipline_review'|trans|capitalize }}
            </h3>

            <div class="row">
                <div class="col-md-9">
                    <div class="card flex-md-row pb-4 mb-4">
                        <div class="card-body d-flex flex-column align-items-start">
                            <h3 class="mb-2 text-dark">
                                {{ discipline.name }}
                            </h3>
                            <div class="mb-3 text-muted">
                                {{ discipline.createdAt|date('M d, Y') }} <br />
                                {{ discipline.user }}
                            </div>
                        </div>
                    </div>

                    {% include 'discipline/_block_theme.html.twig' %}
                    {% include 'discipline/_block_hours.html.twig' %}
                </div>

                <div class="col-md-3">
                    <div class="p-3 mb-3 bg-light rounded">
                        <h4>{{ 'actions'|trans|capitalize }}</h4>
                        <div>
                            {% include 'components/_buttons.html.twig' with {
                                'id': discipline.id,
                                'edit': 'ro_discipline_edit',
                                'back': 'ro_discipline_index',
                                'delete': 'ro_discipline_delete'
                            } %}
                            <a href="{{ path('ro_generate_discipline_program', {'id': discipline.id}) }}"
                               class="btn btn-sm btn-outline-info mb-2">
                                {{ 'generate'|trans|capitalize ~ ' ' ~ 'credit_module'|trans }}
                            </a>
                            <a href="{{ path('ro_generate_credit_module_program', {'id': discipline.id}) }}"
                               class="btn btn-sm btn-outline-info mb-2">
                                {{ 'generate'|trans|capitalize ~ ' ' ~ 'discipline_program'|trans }}
                            </a>
                        </div>
                    </div>

                    {% include 'discipline/_block_statictic.html.twig' with {
                        'statistic': statistic
                    } only %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
