{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <h3 class="pb-3 mb-4 font-weight-bold border-bottom">
                {{ 'Перегляд диcципліни'|trans|capitalize }}
            </h3>

            <div class="row">
                <div class="col-md-9">
                    <div class="card flex-md-row pb-4 mb-4">
                        <div class="card-body d-flex flex-column align-items-start">
                            <h3 class="mb-2 text-dark">
                                {{ discipline.name }}
                            </h3>
                            <div class="mb-3 text-muted">
                                {{ discipline.createdAt|date('M d, Y') }} <br />
                                {{ discipline.user }}
                            </div>
                        </div>
                    </div>

                    <div class="p-3 mb-3 bg-light rounded">
                        <h4 class="mb-2 text-dark">{{ 'topics'|trans }}</h4>
                        {% for topic in discipline.topics %}
                            <div class="card mb-2">
                                <div class="card-body d-flex flex-column align-items-start p-2">
                                    {{ loop.index ~ ' ' ~ topic.name }}
                                </div>
                            </div>
                        {% else %}
                            <div class="m-2 text-center text-muted">
                                {{ 'Розділів не знайдено'|trans }}
                            </div>
                        {% endfor %}
                    </div>

                    <div class="card flex-md-row pb-4 mb-4">
                        <div class="card-body d-flex flex-column align-items-start">
                            <h4 class="mb-2 text-dark">{{ 'topics'|trans }}</h4>
                            {% for topic in discipline.topics %}
                                <div class="p-3 mb-3 bg-light rounded">
                                    {{ loop.index ~ ' ' ~ topic.name }}
                                </div>
                            {% else %}
                                <div class="m-2 text-center text-muted">
                                    {{ 'Розділів не знайдено'|trans }}
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="p-3 mb-3 bg-light rounded">
                        <h4>{{ 'Загальні години'|trans }}</h4>
                        <div class="form-group">
                            <input class="form-control" value="{{ discipline.duration }}" disabled>
                        </div>
                    </div>
                    <div class="p-3 mb-3 bg-light rounded">
                        <h4>{{ 'Дії'|trans }}</h4>
                        <div>
                            <a href="{{ path('ro_topic_new', {'id': discipline.id}) }}" class="btn btn-sm btn-outline-primary mb-2">
                                {{ 'Додати розділ'|trans }}
                            </a>
                            <a href="#" class="btn btn-sm btn-outline-info mb-2 {{ discipline.topics|length ?: 'disabled' }}">
                                {{ 'Розподіл тем на години'|trans }}
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% include 'components/_buttons.thml.twig' with {
        'id': discipline.id,
        'edit': 'ro_discipline_edit',
        'back': 'ro_discipline_index',
        'delete': 'ro_discipline_delete'
    } %}
{% endblock %}
