{% extends 'base.html.twig' %}

{% block body %}
    <main role="main" class="container">
        <div class="row">
            <div class="col-md-12">
                <h3 class="pb-3 mb-4 font-weight-bold border-bottom">
                    {{ 'menu.colleagues'|trans|capitalize }}
                </h3>

                <div class="row">
                    {% for user in users %}
                        <div class="border-bottom pb-3 mb-4 row col-md-6">
                            <h5 class="font-weight-bold col-md-12">{{ user.secondName ~ ' ' ~ user.firstName }}</h5>
                            <div class="col-md-8">
                                {% if user.degree %}
                                    <p class="text-muted">
                                        {{ user.degree }}
                                    </p>
                                {% endif %}
                                <div>Кількість публікацій: {{ user.publications|length }}</div>
                                <div>Кількість дипломних проектів: {{ user.diplomas|length }}</div>
                            </div>

                            <p class="col-md-4">
                                {% include 'components/_buttons.thml.twig' with {
                                    'id': user.id,
                                    'edit': 'ro_user_edit',
                                    'show': 'ro_user_show'
                                } %}
                            </p>
                        </div>
                    {% endfor %}
                </div>

                {% include 'components/_buttons.thml.twig' with {
                    'create': path('ro_user_new')
                } %}
            </div>
        </div>
    </main>
{% endblock %}
