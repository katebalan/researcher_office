<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Researcher's office{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block content %}
            <div class="container">
                {% block header %}
                    {% include 'components/header.html.twig' %}
                    {% include 'components/menu.html.twig' %}
                {% endblock %}
                {% block body %}{% endblock %}
                {% block footer %}
                    {% include 'components/footer.html.twig' %}
                {% endblock %}
            </div>
        {% endblock %}

        {% block window %}
            <script>
                window.ro_ajax_list_lesson_type = "{{ path('ro_ajax_list_lesson_type') }}";
            </script>
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
