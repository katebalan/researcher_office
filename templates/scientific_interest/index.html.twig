{% extends 'base.html.twig' %}

{% block body %}
    <main role="main" class="container">
        <div class="row">
            <div class="col-md-12">
                <h3 class="pb-3 mb-4 font-weight-bold border-bottom">
                    {{ 'menu.scientific_interest'|trans|capitalize }}
                </h3>

                <div class="border-bottom pb-3 mb-4">
                    <div class="ro-group">
                        {% for scientific_interest in scientific_interests %}
                            <a href="{{ path('ro_scientific_interest_edit', {'id': scientific_interest.id}) }}" class="ro-group--link">
                                {{ scientific_interest.name }}
                                {% if scientific_interest.users|length %}
                                    - ({{ scientific_interest.users|length }})
                                {% endif %}
                            </a>
                        {% endfor %}
                    </div>

                    {% include 'components/_buttons.thml.twig' with {
                        'create': path('ro_scientific_interest_new')
                    } %}
                </div>
            </div>
        </div>
    </main>
{% endblock %}
