{% extends 'base.html.twig' %}

{% block body %}
    <main role="main" class="container">
        <div class="row">
            <div class="col-md-12">
                <h3 class="pb-3 mb-4 font-weight-bold border-bottom">
                    {{ 'edit'|trans|capitalize ~ ' ' ~ 'publication'|trans }}
                </h3>

                <div class="border-bottom pb-3 mb-4">
                    {{ include('publication/_form.html.twig', {'button_label': 'update'}) }}

                    {% include 'components/_buttons.thml.twig' with {
                        'id': publication.id,
                        'back': 'ro_publication_index',
                        'delete': 'ro_publication_delete'
                    } %}
                </div>
            </div>
        </div>
    </main>
{% endblock %}
