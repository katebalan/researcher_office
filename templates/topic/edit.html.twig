{% extends 'base.html.twig' %}

{% block title %}Edit Topic{% endblock %}

{% block body %}
    <main role="main" class="container">
        <div class="row">
            <div class="col-md-12">
                <h3 class="pb-3 mb-4 font-weight-bold border-bottom">
                    {{ 'add'|trans|capitalize ~ ' ' ~ 'topic.2'|trans }}
                </h3>

                <div class="border-bottom pb-3 mb-4">
                    {{ include('topic/_form.html.twig') }}

                    {% include 'components/_buttons.html.twig' with {
                        'id': topic.id,
                        'back': 'true',
                        'delete': 'ro_topic_delete'
                    } %}
                </div>
            </div>
        </div>
    </main>
{% endblock %}
